<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:colorBackground">@android:color/white</item>
    </style>

    <style name="DefaultTextStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SmallDefaultTextStyle" parent="DefaultTextStyle">
        <item name="android:textSize">12dp</item>
    </style>

    <style name="LargeDefaultTextStyle" parent="DefaultTextStyle">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="BoldDefaultTextStyle" parent="DefaultTextStyle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SmallBoldDefaultTextStyle" parent="BoldDefaultTextStyle">
        <item name="android:textSize">12dp</item>
    </style>

    <style name="LargeBoldDefaultTextStyle" parent="BoldDefaultTextStyle">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="DefaultLightTextStyle" parent="DefaultTextStyle">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="SmallDefaultLightTextStyle" parent="DefaultLightTextStyle">
        <item name="android:textSize">12dp</item>
    </style>

    <style name="DefaultMediumTextStyle" parent="DefaultTextStyle">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="SmallDefaultMediumTextStyle" parent="DefaultMediumTextStyle">
        <item name="android:textSize">12dp</item>
    </style>

    <style name="LargeDefaultMediumTextStyle" parent="DefaultMediumTextStyle">
        <item name="android:textSize">16dp</item>
    </style>

</resources>